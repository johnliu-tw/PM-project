<p id="notice"><%= notice %></p>

<h1>生產管理系統</h1>
<h2>產品清單</h2>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>產品名稱</th>
      <th>產品庫存</th>
      <th>製造日期</th>
      <th>成本</th>
      <th>售價</th>
      <th>生產工廠</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.P_ID %></td>
        <td><%= product.P_Name %></td>
        <td><%= product.P_Inventory %></td>
        <td><%= product.Produce_Dated %></td>
        <td><%= product.Cost %></td>
        <td><%= product.Price %></td>
        <td><%= product.Factory %></td>
        <td><%= link_to '產品明細', product %></td>
        <td><%= link_to '編輯', edit_product_path(product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h2>生產中商品</h2>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>產品名稱</th>
      <th>製造日期</th>
      <th>成本</th>
      <th>售價</th>
      <th>生產工廠</th>
      <th>原料來源</th>
      <th>生產個數</th>
      <th>生產時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materials.each do |material| %>
    <% if material.Result == "小泡芙" && material.Number!=0 %>
    <% @products.each do |product| %>
      <tr>
        <% if product.P_Name == "小泡芙" %>
        <td><%= product.P_ID %></td>
        <td><%= product.P_Name %></td>
        <td><%= product.Produce_Dated %></td>
        <td><%= product.Cost %></td>
        <td><%= product.Price %></td>
        <td><%= product.Factory %></td>
        <td><%= material.Supplier %></td>
        <td><%= material.Number/2 %>個</td>
        <td><%= material.updated_at %></td>
      <% else %>
      <% end %>
    <% end %>
    <% end %>
     </tr>
    <% end %>
    <% @materials.each do |material| %>
    <% if material.Result == "保久乳" && material.Number!=0 %>
    <% @products.each do |product| %>
      <tr>
        <% if product.P_Name == "保久乳" %>
        <td><%= product.P_ID %></td>
        <td><%= product.P_Name %></td>
        <td><%= product.Produce_Dated %></td>
        <td><%= product.Cost %></td>
        <td><%= product.Price %></td>
        <td><%= product.Factory %></td>
        <td><%= material.Supplier %></td>
        <td><%= material.Number/6 %>個</td>
        <td><%= material.updated_at %></td>
      <% else %>
      <% end %>
    <% end %>
    <% end %>
     </tr>
    <% end %>
  </tbody>
</table>
<a href="/materials">生產頁</a>



